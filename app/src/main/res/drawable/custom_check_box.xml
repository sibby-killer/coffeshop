<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked state -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size
                android:width="24dp"
                android:height="24dp"/>
            <solid android:color="#A04F0A"/> <!-- green box when checked -->
            <corners android:radius="4dp"/>
        </shape>
    </item>

    <!-- Unchecked state -->
    <item>
        <shape android:shape="rectangle">
            <size
                android:width="24dp"
                android:height="24dp"/>
            <solid android:color="#FFFFFF"/> <!-- white box when unchecked -->
            <stroke
                android:width="2dp"
                android:color="#A04F0A"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>

</selector>

