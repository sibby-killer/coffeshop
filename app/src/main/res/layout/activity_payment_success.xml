<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp">

    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:background="@drawable/circuler_logo"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <TextView
        android:id="@+id/tv_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payment Successful!"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/gender"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/iv_success_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_success_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your order has been placed successfully"
        android:textSize="16sp"
        android:textColor="@color/gender"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tv_success_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/payment_details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/grid_bg"
        android:padding="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_success_message">

        <TextView
            android:id="@+id/tv_payment_reference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reference: REF123456"
            android:textSize="14sp"
            android:textColor="@color/gender"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_payment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Amount Paid: Ksh 500"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/gender"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_payment_reference" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_view_orders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View My Orders"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/tagline"
        android:background="@drawable/btn_bg"
        android:paddingVertical="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/payment_details_card" />

    <Button
        android:id="@+id/btn_back_to_drinks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue Shopping"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/gender"
        android:background="@drawable/cancel_btn_bg"
        android:paddingVertical="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/btn_view_orders" />

</androidx.constraintlayout.widget.ConstraintLayout>
