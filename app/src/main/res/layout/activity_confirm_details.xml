<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ConfirmDetails">
    <!-- Dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72000000" />


    <TextView
        android:id="@+id/tv_cnf_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Details"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"

        />
    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coffe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
     <androidx.constraintlayout.widget.ConstraintLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="@id/tv_cnf_details"
         app:layout_constraintBottom_toBottomOf="parent"
         android:layout_margin="10dp"
         android:padding="10dp"
         android:background="@drawable/grid_bg"

         >
         <TextView
             android:id="@+id/tv_fullname"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="full Name:"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:fontFamily="@font/poppins_regular"
             android:layout_margin="10dp"
             android:padding="3dp"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginTop="30dp"

             />
         <TextView
             android:id="@+id/tv_email"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="email"
             android:textSize="18sp"
             android:padding="3dp"
             android:textColor="@color/black"
             android:layout_margin="10dp"
             android:fontFamily="@font/poppins_regular"
             app:layout_constraintTop_toBottomOf="@id/tv_fullname"
             android:layout_marginTop="30dp"
             />
         <TextView
             android:id="@+id/tv_phone"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="phone"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:fontFamily="@font/poppins_regular"
             android:layout_margin="10dp"
             android:padding="3dp"
             app:layout_constraintTop_toBottomOf="@id/tv_email"
             android:layout_marginTop="30dp"
             />
         <TextView
             android:id="@+id/tv_gender"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="gender"
             android:textSize="18sp"
             android:textColor="@color/black"
             android:fontFamily="@font/poppins_regular"
             android:layout_margin="10dp"
             android:padding="3dp"
             android:layout_marginTop="30dp"
             app:layout_constraintTop_toBottomOf="@id/tv_phone"
             />
         <android.widget.Button
             android:id="@+id/bv_cancel"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="Cancel"
             android:textSize="24sp"
             android:background="@drawable/cancel_btn_bg"
             android:textColor="@color/white"
             android:paddingVertical="12dp"
             android:paddingHorizontal="20dp"
             android:textAllCaps="false"
             app:layout_constraintTop_toBottomOf="@id/tv_gender"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toStartOf="@id/bv_confirm"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="20dp"
             android:layout_marginStart="10dp"
             />

         <android.widget.Button
             android:id="@+id/bv_confirm"
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:textAllCaps="false"
             android:text="Confirm"
             android:textSize="24sp"
             android:background="@drawable/confirm_bg"
             android:textColor="@color/white"
             android:paddingVertical="12dp"
             android:paddingHorizontal="20dp"
             app:layout_constraintTop_toBottomOf="@id/tv_gender"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintStart_toEndOf="@id/bv_cancel"
             android:layout_marginTop="40dp"
             android:layout_marginBottom="20dp"
             android:layout_marginEnd="10dp"
             android:layout_marginStart="5dp"
             />



     </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>