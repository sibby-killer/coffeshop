<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ConfirmDetails">
    <!-- Dark overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#72000000" />


    <TextView
        android:id="@+id/tv_cnf_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Details"
        android:elevation="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="28sp"

        />
    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/coffe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:rowCount="3"
        android:layout_margin="10dp"
        android:background="@drawable/grid_bg"
        android:elevation="5dp"
        app:layout_constraintTop_toBottomOf="@id/tv_cnf_details"
        >
        <TextView
            android:id="@+id/tv_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="full Name:"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_margin="10dp"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email"
            android:textSize="18sp"
            android:padding="3dp"

            android:textColor="@color/black"
            android:layout_margin="10dp"
            android:fontFamily="@font/poppins_regular"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="phone"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_margin="10dp"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="gender"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_margin="10dp"
            android:padding="3dp"
            />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:background="@drawable/linear_layout_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/grid_layout"
        app:layout_constraintVertical_bias="0.043"
        tools:layout_editor_absoluteX="0dp">

        <android.widget.Button
            android:id="@+id/bv_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/cancel_btn_bg"
            android:elevation="5dp"
            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/bv_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/confirm_bg"
            android:elevation="5dp"

            android:fontFamily="@font/poppins_regular"
            android:padding="5dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>